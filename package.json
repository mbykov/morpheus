{
  "name": "morpheus-eastern",
  "version": "0.4.3",
  "description": "Morpheus for Chinese and other Oriental languages",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "build": "webpack",
    "start": "electron .",
    "test": "echo \"Error: no test specified\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "homepage": "http://diglossa.org",
  "repository": "https://github.com/mbykov/laoshi",
  "keywords": [
    "chinese",
    "segmentation",
    "node.js",
    "electron.js"
  ],
  "author": "mbykov <m.bykov@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.5",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "electron-rebuild": "^1.6.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "imports-loader": "^0.7.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "delegate": "^3.1.3",
    "electron-is-dev": "^0.3.0",
    "fs-jetpack": "^1.1.0",
    "gunzip-maybe": "^1.4.1",
    "han-css": "^3.3.0",
    "lodash": "^4.17.4",
    "pouchdb": "^6.3.4",
    "progress-component": "0.0.4",
    "recursive-segmenter": "^0.3.0",
    "speckled-band": "^0.2.0",
    "split.js": "^1.3.5",
    "tar-fs": "^1.15.3"
  },
  "build": {
    "appId": "com.github.mbykov.morpheus-eastern",
    "files": [
      "build/",
      "assets/",
      "cedict/",
      "src",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "mbykov",
        "repo": "morpheus-eastern"
      }
    ],
    "mac": {
      "category": "Educational software",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "publisherName": "Michael Bykov",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "perMachine": false
    }
  }
}
