{
  "name": "laoshi",
  "version": "0.2.27",
  "description": "Morpheus for Chinese",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "webpack",
    "start": "electron .",
    "test": "echo \"Error: no test specified\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "homepage": "http://diglossa.org",
  "repository": "https://github.com/mbykov/laoshi",
  "keywords": [
    "chinese",
    "segmentation",
    "node.js",
    "electron.js"
  ],
  "author": "mbykov <m.bykov@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.4",
    "electron": "^1.6.11",
    "electron-builder": "^19.18.1",
    "electron-rebuild": "^1.6.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "imports-loader": "^0.7.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1"
  },
  "dependencies": {
    "delegate": "^3.1.3",
    "hieroglyphic": "^0.2.4",
    "lodash": "^4.17.4"
  },
  "build": {
    "appId": "com.github.mbykov.laoshi",
    "asarUnpack": "pouchdb",
      "files": [
          "dist/",
          "assets/",
          "pouchdb/",
          "node_modules/",
          "main.js",
          "package.json"
      ],
      "publish": [
          {
              "provider": "github",
              "owner": "mbykov",
              "repo": "laoshi"
          }
    ],
    "mac": {
      "category": "Educational software",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "publisherName": "Michael Bykov",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "perMachine": false
    }
  }
}
